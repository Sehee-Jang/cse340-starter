<div class="content-container">
  <h1><%= title %></h1>

  <% if (typeof message !== 'undefined' && message) { %>
  <div class="flash-message"><%= message %></div>
  <% } %>

  <!-- Registration form -->
  <form action="/account/register" method="POST" class="register-form">
    <label for="account_first_name">First Name:</label>
    <input
      type="text"
      id="account_first_name"
      name="account_first_name"
      required
    />

    <label for="account_last_name">Last Name:</label>
    <input
      type="text"
      id="account_last_name"
      name="account_last_name"
      required
    />

    <label for="account_email">Email Address:</label>
    <input type="email" id="account_email" name="account_email" required />

    <!-- Password Field -->
<label for="account_password">Password:</label>
<input 
  type="password" 
  id="account_password" 
  name="account_password" 
  required
  pattern="^(?=.*\d)(?=.*[a-z])(?=.*[A-Z])(?=.*[^a-zA-Z0-9])(?!.*\s).{12,}$"
  title="Password must be at least 12 characters long, contain at least 1 uppercase letter, 1 lowercase letter, 1 number, and 1 special character."
>

<!-- Password Requirements -->
<div class="password-requirements">
  <p>Password Requirements:</p>
  <ul>
    <li>At least 12 characters long</li>
    <li>At least 1 uppercase letter</li>
    <li>At least 1 lowercase letter</li>
    <li>At least 1 number</li>
    <li>At least 1 special character</li>
  </ul>
</div>


    <!-- Password toggle button -->
    <button type="button" onclick="togglePassword()">Show/Hide Password</button>

    <button type="submit">Register</button>
  </form>

  <p>
    Already have an account?
    <a href="/account/login" class="bold">Login here</a>
  </p>
</div>
